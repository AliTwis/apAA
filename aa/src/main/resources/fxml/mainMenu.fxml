<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_RIGHT" prefHeight="400.0" prefWidth="600.0" spacing="50" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainMenuFXController">
   <Button alignment="CENTER" mnemonicParsing="false" textAlignment="CENTER">
      <graphic>
         <ImageView fitHeight="61.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../images/icons/profileMenu.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>
    <VBox alignment="CENTER" spacing="20">
        <Button alignment="CENTER" maxWidth="170" minWidth="170" text="new Game" />
        <Button alignment="CENTER" maxWidth="170" minWidth="170" onAction="#showScoreboard" text="Scoreboard" />
        <Button alignment="CENTER" maxWidth="170" minWidth="170" text="Setting" />
        <Button alignment="CENTER" maxWidth="170" minWidth="170" onAction="#exit" text="Exit" />
    </VBox>

</VBox>
